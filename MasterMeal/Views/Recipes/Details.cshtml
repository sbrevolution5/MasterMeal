@model MasterMeal.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CookingTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CookingTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.DisplayName)
        </dd>
        <dt class="col-sm-2">
            Recipe Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.Name)
        </dd>
    </dl>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Steps</dt>
        <dd class="col-sm-10">@Model.Steps.Count</dd>
        @foreach (var step in Model.Steps)
        {
            <dt class="col-sm-2">
                @step.StepNumber
            </dt>
            <dd class="col-sm-10">
                @step.Text
            </dd>

        }
        <dt><a asp-controller="Steps" asp-action="Create" asp-route-id="@Model.Id">Add A New Step!</a></dt>
        <dd></dd>
    </dl>
    <hr />
    <dl class="row">
        <dt></dt>
        <dd></dd>
        <dt class="col-sm-2">Ingredients</dt>
        <dd class="col-sm-10">@Model.Ingredients.Count</dd>
        @foreach (var ingredient in Model.Ingredients)
        {
            <dt class="col-sm-2">
                @ingredient.Quantity
            </dt>
            <dd class="col-sm-10">
                @ingredient.Ingredient.Name
            </dd>

        }
    </dl>
    <hr />
    <dl class="row">
        <dt></dt>
        <dd></dd>
        <dt class="col-sm-2">Supplies</dt>
        <dd class="col-sm-10">@Model.Supplies.Count</dd>
        @foreach (var supply in Model.Supplies)
        {
            <dt class="col-sm-2">@supply.Id</dt>
            <dd class="col-sm-10">@supply.Name</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
